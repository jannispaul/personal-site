    <script>
      let projects = document.querySelectorAll('.project');
      let allElements = document.querySelectorAll('[data-project]');
      projects.forEach(project => project.addEventListener('click', () => {
        let selectedAttribute = `data-${project.getAttribute("data-target")}`;
        allElements.forEach(
          item => (item.hasAttribute(selectedAttribute))
          ? (item.classList.toggle("hidden"))
          : (item.classList.add("hidden")));
      }));
